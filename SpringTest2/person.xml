<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<!-- 
xml 파일은 스프링자체를 의미 (쇼핑몰) b
eans는 스프링에서 객체를 의미 (그래픽카드 상품들...) 
-->
<beans>
     <!-- 객체 생성 (new PersonImpl() )  -->
    <bean id="person" class="com.itwillbs.test.PersonImpl">
       <!-- setter를 사용한 데이터 주입을 사용(설계시 set() 생성) -->
      <property name="name">
        <value>홍길동</value>
      </property>
      <property name="age" value="20"></property>      
    </bean>
    
    
    <bean id="personC1" class="com.itwillbs.test.PersonImpl">
        <!-- 생성자를 사용한 데이터 주입 -->
        <constructor-arg>
          <value>김학생</value>
        </constructor-arg>
    </bean>
    
    
    <bean id="personC2" class="com.itwillbs.test.PersonImpl">
       <constructor-arg value="박학생" />
       <constructor-arg value="30" />
    </bean>



</beans>        